@page "/lead/consorcios"
<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lead Consórcio</title>
    <style>
        .table-container {
            width: 100%;
            overflow-x: auto;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            padding: 10px;
            border: 1px solid #ddd;
            text-align: left;
        }

        tr {
            transition: background-color 0.3s;
        }

            tr.clickable:hover {
                background-color: #f0f0f0;
                cursor: pointer;
            }
    </style>
</head>
<body>
    <h1>Leads Consórcios</h1>
    <div class="table-container">
        <table>
            <thead>
                <tr>
                    <th>Nome Cliente</th>
                    <th>CPF</th>
                    <th>Tipo de consórcio</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @if (Leads?.Any() == false)
                {
                    <tr>
                        <td colspan="6" style="text-align: center; padding: 20px; font-style: italic; color: #999;">Nenhum leads encontrado.</td>
                    </tr>
                }
                @foreach (var lead in Leads)
                {
                    var buttonClass = lead.Status == "pendent"
                    ? "status-pendente"
                    : lead.Status == "não vendido"
                    ? "status-nao-vendido"
                    : "status-outro";

                    <tr>
                        <td>@lead.Name</td>
                        <td>@lead.DocumentCpf</td>
                        <td>
                            <button class="status-button status-outro">
                                @lead.ConsortiaType
                            </button>
                        </td>
                        <td>
                            <button class="status-button @buttonClass">
                                @lead.Status
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>


